                <parameter>
                    <key>expression</key>
                    <value>
                        /bns:Component/*/Overrides/Connections/ConnectionOverride/field[@id='user'][@overrideable='false']
                    </value>
                </parameter>
                <parameter>
                    <key>message</key>
                    <value>Connection property "user" must be extensible. @overrideable must be "true"</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>xml</repositoryKey>
            <key>AtomQueue_Has_NoDLQ</key>
            <type>BUG</type>
            <priority>MINOR</priority>
            <name>AtomQ Dead Letter Queue</name>
            <templateKey>XPathCheck</templateKey>
            <description>AtomQ does not have a Dead Letter Queue</description>
            <parameters>
                <parameter>
                    <key>filePattern</key>
                    <value>**/**.xml</value>
                </parameter>
                <parameter>
                    <key>expression</key>
                    <value>/bns:Component/bns:object/Operation/Configuration/QueueGetAction[@deadLetterQueue='false']
                    </value>
                </parameter>
                <parameter>
                    <key>message</key>
                    <value>AtomQ Listener should have a Dead Letter Queue</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>xml</repositoryKey>
            <key>General_Mode_Listener</key>
            <type>BUG</type>
            <priority>MINOR</priority>
            <name>General Model Listener Process</name>
            <templateKey>XPathCheck</templateKey>
            <description>A listener Process can run in Low Latency mode instead of General Mode</description>
            <parameters>
                <parameter>
                    <key>filePattern</key>
                    <value>**/**.xml</value>
                </parameter>
                <parameter>
                    <key>expression</key>
                    <value>
                        /bns:Component/bns:object/process/shapes/shape/configuration/connectoraction[@actionType='Listen']/../../../../../process[@workload='general']
                    </value>
                </parameter>
                <parameter>
                    <key>message</key>
                    <value>Process with a Listener start shape is running can run in Low Latency Mode</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>xml</repositoryKey>
            <key>Connection_Name_Standard</key>
            <type>CODE_SMELL</type>
            <priority>MINOR</priority>
            <name>Connection Name Must Follow CHG Standard</name>
            <templateKey>XPathCheck</templateKey>
            <description>The name of connection components must include square brackets ([]) with uppercase text inside (e.g., [Salesforce], [Leads], [SAP]). This rule ensures compliance with CHG naming conventions.</description>
            <parameters>
                <parameter>
                    <key>filePattern</key>
                    <value>**/**.xml</value>
                </parameter>
                <parameter>
                    <key>expression</key>
                    <value>/bns:Component[@type='connector-settings' and not(contains(@name, '[') and contains(@name, ']') and translate(substring-before(substring-after(@name, '['), ']'), 'abcdefghijklmnopqrstuvwxyz', 'ABCDEFGHIJKLMNOPQRSTUVWXYZ') = substring-before(substring-after(@name, '['), ']'))]</value>
                </parameter>
                <parameter>
                    <key>message</key>
                    <value>Connection names must include uppercase text in square brackets (e.g., [Salesforce], [Leads], [SAP]).</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>xml</repositoryKey>
            <key>Connection_Operation_NameStandard</key>
            <type>CODE_SMELL</type>
            <priority>MINOR</priority>
            <name>Connection Operation Name Must Follow CHG Standard</name>
            <templateKey>XPathCheck</templateKey>
            <description>The name of connection operation must include square brackets ([]) with uppercase text inside (e.g., [Salesforce], [Leads], [SAP]). This rule ensures compliance with CHG naming conventions.</description>
